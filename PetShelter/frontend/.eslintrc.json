{
  "root": true,
  "ignorePatterns": [
    "projects/**/*"
  ],
  "overrides": [
    {
      "files": [
        "*.ts"
      ],
      "parserOptions": {
        "project": [
          "tsconfig.json"
        ],
        "createDefaultProgram": true
      },
      "extends": [
        "plugin:@angular-eslint/recommended",
        "plugin:@angular-eslint/template/process-inline-templates"
      ],
      "rules": {
        "@angular-eslint/directive-selector": [
          "error",
          {
            "type": "attribute",
            "prefix": "app",
            "style": "camelCase"
          }
        ],
        "@angular-eslint/component-selector": [
          "error",
          {
            "type": "element",
            "prefix": "app",
            "style": "kebab-case"
          }
        ],
        "@typescript-eslint/member-ordering": [
          "error",
          { "default": [
            "signature",

            // Fields
            "public-decorated-field",
            "private-decorated-field",
            "public-decorated-method",
            "private-decorated-method",
            "public-field",
            "private-field",
            "public-method",
            "method",
            "private-method"
            ] }
        ]
      }
    },
    {
      "files": [
        "*.html"
      ],
      "extends": [
        "plugin:@angular-eslint/template/recommended"
      ],
      "rules": {
        "@typescript-eslint/member-ordering": [
          "error",
          { "default": [
            "signature",

            // Fields
            "public-decorated-field",
            "private-decorated-field",
            "public-decorated-method",
            "private-decorated-method",
            "public-field",
            "private-field",
            "public-method",
            "method",
            "private-method"
            ] }
        ]
      }
    }
  ]
}
